<!-- views/tenant.html -->
<!DOCTYPE html>
<html lang="en">
<head><meta charset="UTF-8"><title>Tenant: <%= tenant %></title></head>
<body>
  <h2>Tenant: <%= tenant %></h2>

  <!-- Dosya YÃ¼kle Formu -->
  <form action="/tenant/upload" method="post" enctype="multipart/form-data">
    <input type="hidden" name="tenant" value="<%= tenant %>">
    <input type="file" name="file" required>
    <button type="submit">YÃ¼kle</button>
  </form>

  <!-- Dosya Listesi -->
  <table border="1">
    <tr><th>Dosya</th><th>Detay</th></tr>
    <% data.forEach(function(doc) { %>
      <tr>
        <td><%= doc.original_name %></td>
        <td>
          <form action="/tenant/detail" method="post">
        <input type="hidden" name="tenant" value="<%= tenant %>">
        <input type="hidden" name="blob_key" value="<%= doc.blob_key %>">
        <button type="submit">Detay</button>
      </form>
        </td>
      </tr>
    <% }); %>
  </table>
</body>
</html>